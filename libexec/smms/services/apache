#!/usr/bin/env bash

apache_service_exists() {
	case "$(InitSystem)" in
	"${SMMS_INIT_OPENRC}")
		test -x /etc/init.d/apache2 && return
		;;
	"${SMMS_INIT_SYSTEMD}")
		test -e /lib/systemd/system/apache2.service && return
		;;
	esac

	return 1
}

apache_service_list() {
	case "$(InitSystem)" in
	"${SMMS_INIT_OPENRC}")
		test -x /etc/init.d/apache2 && echo apache2 apache2.service
		;;
	"${SMMS_INIT_SYSTEMD}")
		test -e /lib/systemd/system/apache2.service && echo apache2 apache2.service
		;;
	esac
}

apache_service_cmd() {
	WHICH apache2
}

apache_service_name() {
	echo "The Apache Web Server"
}

apache_service_info() {
	echo "$(applications_vv /usb/sbin/apache2)"
}

apache_service_status() {
	local mods

	case "$(InitSystem)" in
	"${SMMS_INIT_OPENRC}")
		/etc/init.d/apache2 configtest &>/dev/null && return
		;;
	"${SMMS_INIT_SYSTEMD}")
		case "$(getDistro)" in
		"${SMMS_OS_GENTOO}")
			mods="$(grep ^APACHE2_OPTS= /etc/conf.d/apache2 | cut -d\" -f2)"
			;;
		esac

		/usr/sbin/apache2ctl ${mods} configtest &>/dev/null && return
		;;
	esac

	return 1
}
