#!/usr/bin/env bash

apache_service_exists() {
	case "$(InitSystem)" in
	"${SMMS_INIT_OPENRC}")
		test -x /etc/init.d/apache2 && return
		;;
	"${SMMS_INIT_SYSTEMD}")
		test -e /lib/systemd/system/apache2.service && return
		;;
	esac

	return 1
}

apache_service_list() {
	echo apache2 apache2.service
}

apache_service_cmd() {
	case "$(InitSystem)" in
	"${SMMS_INIT_OPENRC}")
		echo "apache"
		;;
	"${SMMS_INIT_SYSTEMD}")
		echo "apache.service"
		;;
	esac
}

apache_service_name() {
	echo "The Apache Web Server"
}

apache_service_info() {
	echo "$(applications_vv "$1")"
}

apache_service_status() {
	case "$(InitSystem)" in
	"${SMMS_INIT_OPENRC}")
		/etc/init.d/apache2 configtest && return
		;;
	"${SMMS_INIT_SYSTEMD}")
		apache2ctl configtest && return
		;;
	esac

	return 1
}
